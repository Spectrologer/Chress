{
  "compilerOptions": {
    // Target modern JavaScript
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Module resolution
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Incremental migration settings
    "allowJs": true,                  // Allow JavaScript files
    "checkJs": false,                 // Don't check all JS files by default
    "noEmit": true,                   // Don't emit compiled files (just type checking)

    // Strict type checking (start lenient, tighten over time)
    "strict": false,                  // Start with lenient checking
    "noImplicitAny": false,          // Allow implicit any for now
    "strictNullChecks": false,       // Enable later
    "strictFunctionTypes": false,    // Enable later
    "strictBindCallApply": false,    // Enable later
    "strictPropertyInitialization": false,  // Enable later

    // Additional checks to enable gradually
    "noUnusedLocals": false,         // Enable later
    "noUnusedParameters": false,     // Enable later
    "noImplicitReturns": false,      // Enable later
    "noFallthroughCasesInSwitch": true,

    // Source maps for debugging
    "sourceMap": true,
    "inlineSourceMap": false,

    // Skip lib check for faster compilation
    "skipLibCheck": true,

    // Force consistent casing
    "forceConsistentCasingInFileNames": true,

    // Base directory
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "tools/**/*",
    "scripts/**/*",
    "tests/**/*",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
