{
  "name": "chesse",
  "version": "1.0.0",
  "description": "A browser-based RPG game with turn-based combat, zone exploration, and procedural generation",
  "keywords": [
    "game",
    "rpg",
    "javascript",
    "html5-canvas",
    "browser-game"
  ],
  "homepage": "https://github.com/Spectrologer/Chesse",
  "bugs": {
    "url": "https://github.com/Spectrologer/Chesse/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Spectrologer/Chesse.git"
  },
  "license": "ISC",
  "author": "Spectrologer",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "asset-viewer": "vite --open=/asset-viewer.html",
    "assets:discover": "tsx tools/generate-editor-assets.ts",
    "assets:atlas": "node scripts/generate-atlases.js",
    "boards:sync": "tsx scripts/sync-boards.js",
    "boards:manifest": "node scripts/generate-board-manifest.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "ts:strict-errors": "node scripts/typescript-migration-helper.cjs errors",
    "ts:strict-progress": "node scripts/typescript-migration-helper.cjs progress",
    "ts:strict-candidates": "node scripts/typescript-migration-helper.cjs candidates",
    "ts:check-strict": "tsc --noEmit --strict",
    "ts:check-no-implicit-any": "tsc --noEmit --noImplicitAny",
    "ts:check-strict-null": "tsc --noEmit --strictNullChecks"
  },
  "dependencies": {
    "@sentry/browser": "^10.23.0",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "free-tex-packer-core": "^0.3.5",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.10",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "terser": "^5.44.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.8",
    "workbox-window": "^7.3.0"
  }
}
