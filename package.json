{
  "name": "chress",
  "version": "1.0.0",
  "description": "A browser-based RPG game with turn-based combat, zone exploration, and procedural generation",
  "keywords": [
    "game",
    "rpg",
    "javascript",
    "html5-canvas",
    "browser-game"
  ],
  "homepage": "https://github.com/Spectrologer/Chress",
  "bugs": {
    "url": "https://github.com/Spectrologer/Chress/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Spectrologer/Chress.git"
  },
  "license": "ISC",
  "author": "Spectrologer",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "asset-viewer": "vite --open=/asset-viewer.html",
    "assets:discover": "node tools/generate-editor-assets.js",
    "boards:sync": "node scripts/sync-boards.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@sentry/browser": "^10.19.0",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.10",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.36.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^0.21.2",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.6",
    "workbox-window": "^7.3.0"
  }
}
